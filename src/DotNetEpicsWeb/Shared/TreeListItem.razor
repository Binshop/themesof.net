@if (Nodes.Any())
{
    <ul class="tree">
        @foreach (var node in Nodes)
        {
            <li>
                @{
                    var issueClass = Owner.IsMuted(node) ? "muted" : "";
                    var issue = node.IssueNode.Issue;
                }
                <div class="gh-issue @issueClass d-flex flex-row">
                    @{
                        var visibleClass = node.Children.Count == 0 ? "invisible" : "";
                        var glyph = Owner.IsExpanded(node) ? "oi-minus" : "oi-plus";
                    }
                    <span class="oi @glyph tree-toggle @visibleClass" @onclick="() => Owner.ToggleNode(node)"></span>
                    <div class="gh-issue-kind-header @issue.Kind.ToString().ToLower()" />
                    <div>
                        <div>
                            <a class="gh-issue-title" href="@issue.Url" target="_blank">@issue.Title</a>
                            <span>
                                @foreach (var label in issue.Labels)
                                {
                                    <span class="gh-label"
                                          style="background: @("#" + label.BackgroundColor); color: @label.ForegroundColor">@label.Name</span>
                                }
                            </span>
                        </div>
                        <div class="gh-details-cell">
                            @if (issue.ProjectStatus != null)
                            {
                                <span class="gh-project-status">@issue.ProjectStatus.Column for @issue.ProjectStatus.ProjectName</span>
                            }

                            @issue.DetailText

                            @if (issue.Milestone != null)
                            {
                                <span class="ml-2 mr-1 oi oi-signpost text-muted" aria-hidden="true"></span>@issue.Milestone
                            }

                            @if (issue.Assignees.Any())
                            {
                                var assigneeList = string.Join(", ", issue.Assignees);
                                <span class="ml-2 mr-1 oi oi-person text-muted" aria-hidden="true"></span>@assigneeList
                            }
                        </div>
                    </div>
                </div>

                @if (Owner.IsExpanded(node))
                {
                    <TreeListItem Owner="@Owner" Nodes="@node.Children" />
                }
            </li>
        }
    </ul>
}

@code {

    [Parameter]
    public Pages.Index Owner { get; set; }

    [Parameter]
    public IReadOnlyList<DotNetEpicsWeb.Pages.PageNode> Nodes { get; set; }
}
